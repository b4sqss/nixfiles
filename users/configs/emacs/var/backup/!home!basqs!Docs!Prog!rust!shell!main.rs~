use std::process::Command;
use std::io::stdin;
use std::io::stdout;
use std::io::Write;

fn main(){
    loop{
	println!("> ");
	stdout().flush();

	let mut input = String::new();
	stdin().read_line(&mut input).unwrap();

	// read_line leaves a trailing newline, which trim removes
	let command = input.trim(); 

	let mut child = Command::new(command)
	    .spawn()
	    .unwrap();

	child.wait();
    }
}
